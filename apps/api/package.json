{
  "name": "@paillette/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "build": "tsc && wrangler deploy --dry-run",
    "deploy": "wrangler deploy",
    "deploy:staging": "wrangler deploy --env staging",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "clean": "rm -rf dist .wrangler"
  },
  "dependencies": {
    "@cloudflare/ai": "^1.0.63",
    "@hono/zod-validator": "^0.4.1",
    "@paillette/database": "workspace:*",
    "@paillette/document-processor": "workspace:*",
    "@paillette/metadata": "workspace:*",
    "@paillette/translation": "workspace:*",
    "@paillette/types": "workspace:*",
    "hono": "^4.6.14",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.5.25",
    "@cloudflare/workers-types": "^4.20241127.0",
    "@types/node": "^22.10.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8",
    "wrangler": "^3.94.0"
  }
}
